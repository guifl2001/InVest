<div class="filter margin-top">
  <div class="test">
  <%= form_tag opcaos_path, method: :get do %>

    <%= text_field_tag :opçao,
      params[:opçao],
      class: "form-control",
      id: "query",
      placeholder: "Busca uma matéria"%>

    <%= text_field_tag :facu,
    params[:facu],
    class: "form-control",
    id: "query",
    placeholder: "Busca uma faculdade"%>

    <%= button_tag type: 'submit', class: "button-opcaos" do %>
      <i class=" fa fa-search" aria-hidden="true"><span class="my-0"> Buscar </span></i>
    <% end %>
  <% end %>
  <%= link_to "Ver todas", opcaos_path, class: "curso-decoration bold" %>
  </div>
</div>

<div class="container py-5">
  <div class="grids">
    <% @opcaos.each do |opcao| %>
      <div class="fac-card" data-aos="zoom-in">
        <%= image_tag "https://images.unsplash.com/photo-1517423568366-8b83523034fd?ixlib=rb-1.2.1&auto=format&fit=crop&w=1575&q=80" %>
        <%= link_to opcao_path(opcao), class: "faculdade" do %>
        <div class="text-area">
          <h2 class="college"><%= opcao.curso.name  %></h2>
          <h6><%= opcao.faculdade.name %></h6>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= paginate @opcaos, class: "paginate" %>
</div>
