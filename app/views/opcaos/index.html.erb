<div class="filter">

  <h3>Filtrar</h3>


  <div class="dropdown">
    <button onclick="myFunction()" class="dropbtn">Escolhe um curso</button>
    <div id="myDropdown" class="dropdown-content">
      <input type="text" placeholder="Search.." id="query" onkeyup="filterFunction()">
        <% ocde_hash = [] %>
      <% @cursos.each do |curso| %>

        <% if ocde_hash.include?(curso.OCDE_geral) == false %>
          <% ocde_hash << curso.OCDE_geral %>
          <% else %>
        <% end %>

        <a href=""> <%=ocde_hash.first %></a>

        <% end %>
    </div>
  </div>


</div>



<%= form_tag opcaos_path, method: :get do %>
<%= text_field_tag :query,
  params[:query],
  class: "form-control",
  id: "query",
  placeholder: "Busca uma matÃ©ria"%>
<%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>


