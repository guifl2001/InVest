<% image = image_path('graduation.png') %>
<div class="app" style="background-image: url('<%= image %>');">
  <main>

    <h1><%= @opcao.curso.name %> EM <%= @opcao.faculdade.name %></h1>
    <% if user_signed_in? %>
        <% if current_user.user_opcaos.where(opcao: @opcao).present? %>
        <h2>
          <%= link_to "Parar de seguir",
          user_opcao_path(current_user.user_opcaos.where(opcao: @opcao).pluck(:id)),
          method: :delete,
          remote: true,
          class: "btn btn-danger opcao_unfollowing",
            data: {id: "#{@opcao.id}"} %>
        </h2>
      <% else %>
        <h2>
          <%= link_to "Seguir",
          user_opcaos_path(opcao: @opcao),
          method: :post,
          remote: true,
          class: 'btn btn-secondary opcao_following',
          data: {id: "#{@opcao.id}"} %>
        </h2>
      <% end %>
    <% end %>
  </main>
</div>
<% notas = image_path('notas.jpg') %>
<ul class="cards">
  <li class="cards__item">
    <div class="cardin">
      <div class="cardin__image" style="background-image: url('<%= notas %>');"></div>
      <div class="cardin__content">
        <div class="cardin__title">As notas:</div>
        <p class="cardin__text">Ranking da Folha(RUF): <%= @opcao.faculdade.ranking %>º</p>
        <% if @opcao.enade == 0 && @opcao.cc == 0 %>
          <p class="cardin__text">Conceito de Curso (CC): SEM NOTA</p>
        <% elsif @opcao.enade == 0 %>
          <p class="cardin__text">Conceito de Curso (CC):
          <% @opcao.cc.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% (5 - @opcao.cc).times do %>
            <i class="far fa-star"></i>
          <% end %>
          </p>
        <% else %>
          <p class="cardin__text">ENADE(MEC):
          <% @opcao.enade.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% (5 - @opcao.enade).times do %>
            <i class="far fa-star"></i>
          <% end %>
          </p>
        <% end %>
      </div>
    </div>
  </li>
  <% datas = image_path('datas.png') %>
  <li class="cards__item">
    <div class="cardin">
      <div class="cardin__image" style="background-image: url('<%= datas %>');"></div>
      <div class="cardin__content">
        <div class="cardin__title">Datas Importantes:</div>
        <% if @opcao.data_inscricao.present? %>
        <p class="cardin__text">Data de inscrição: <%= @opcao.data_inscricao %>
        <% else %>
        <p class="cardin__text">Data de inscrição: 22/10/2019
        </p>
        <% end %>
        <% if @opcao.data_prova.present? %>
        <p class="cardin__text">Data de prova: <%= @opcao.data_prova %>
        <% else %>
        <p class="cardin__text">Data de prova: 22/11/2019
        </p>
        <% end %>
      </div>
    </div>
  </li>
  <% infos = image_path('infos.png') %>
  <li class="cards__item">
    <div class="cardin">
      <div class="cardin__image" style="background-image: url('<%= infos %>');"></div>
      <div class="cardin__content">
        <div class="cardin__title">Outras Informações:</div>
        <p class="cardin__text">Número de vagas: <%= @opcao.vagas %></p>
        <p class="cardin__text">Tipo do curso: <%= @opcao.grau %></p>
      </div>
    </div>
  </li>
</ul>


