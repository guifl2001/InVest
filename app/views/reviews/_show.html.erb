<div class="comment">
  <p>
    Posted by <%= link_to review.user.first_name, user_path(review.user) %>, three days ago:
    <% (review.rating.to_i).times do %>
      <i class="fas fa-star"></i>
    <% end %>
    <% (5 - review.rating.to_i).times do %>
      <i class="far fa-star"></i>
    <% end %>
  </p>
  <p><%= review.content %></p>


</div>
