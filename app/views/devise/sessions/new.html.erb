<div class="container-login form-align-center flex-content-center">
  <div class="row justify-content-center">
    <div class="col-lg-12 col-md-12 col-sm-12 flex-align center">
        <div class="form-center">
            <div class="forms-inputs">
              <h2>Log in</h2>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "Email address" } %>
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
            </div>
            <div class="form-login-check">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-submit-btn">
              <%= f.button :submit, "Log in"%>
            </div>
            <% end %>

            <div class="form-login-links">
              <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
  </div>
</div>
