  <div class="wrapper">
    <div class="page-header clear-filter page-header-small" filter-color="orange">
      <div class="page-header-image" data-parallax="true" style="background-image: linear-gradient(0deg,rgba(44,44,44,.2),rgba(224,23,3,.6)), url('https://images.unsplash.com/photo-1501503069356-3c6b82a17d89?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80');">
        <div class="profile-container">
          <% if @user.photo.present? %>
            <%= cl_image_tag @user.photo, class: "avatar user-img", style: 'height:150px ;width:150px;object-fit:cover' %>
          <% else %>
            <%= image_tag "user.png", class: "avatar user-img", style: 'height:150px ;width:150px;object-fit:cover' %>
          <% end %>
          <h3 class="title"><%= "#{@user.first_name} #{@user.last_name}" %></h3>
          <p class="category">Estudante</p>
          <div class="follow">
            <div class="followers">
              <h3 class="title">
                <%= @user.followers.count %>
              </h3>
              <p>Seguidores</p>
            </div>
            <div class="following">
              <h3 class="title">
                <%= @user.following.count %>
              </h3>
              <p>Seguindo</p>
            </div>
          </div>
          <div class="button-container">
            <a href="#button" class="btn btn-round" rel="tooltip" title="Follow me on Twitter">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="#button" class="btn btn-round" rel="tooltip" title="Follow me on Instagram">
              <i class="fab fa-instagram"></i>
            </a>
            <a href="#button" class="btn btn-round" rel="tooltip" title="Follow me on Facebook">
              <i class="fab fa-facebook"></i>
            </a>
            <a href="#button" class="btn btn-round" rel="tooltip" title="See calendar" data-toggle="modal" data-target="#exampleModal">
              <i class="fa fa-calendar" aria-hidden="true"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="calendar-div">
            <div id="calendar"></div>
          <div class="modal-footer">
            <%= link_to "Close", user_path(@user), class: "btn btn-secondary" %>
          </div>
        </div>
        </div>
    <div class="section my-3">
      <div class="profile-container">
        <h3 class="title">Sobre mim</h3>
        <% if @user.infos %>
          <p class="description px-5"><%= @user.infos %></p>
        <% else %>
          <p class="description px-5"> Descrição? Só quero passar no vestibular!</p>
        <% end %>
        <h4 class="title text-center">Meus Cursos</h4>
        <div class="container">

        <% if @user.user_opcaos.size > 3 %>
          <div class="opcaos" id="opcaos">
            <% @user.user_opcaos.each_with_index do |user_opcao, index| %>
              <%= render 'card', user_opcao: user_opcao, card_index: index %>
            <% end %>
          </div>
        <% elsif @user.user_opcaos.size > 0 %>

          <div class="opcs" id="opcs">
            <%= render 'card_grid', user: @user %>
          </div>
        <% else %>
          <div class="no-choice">
            <h4>Você ainda não escolheu nenhum curso.</h4>
          </div>
        <% end %>

        </div>
        </div>
        <h4 class="title text-center mt-3">Seguindo</h4>
        <div class="container">

        <% if @user.following.size > 3 %>
          <div class="opcaos" id="opcaos">
            <%= render 'user_card', user: @user %>
          </div>
        <% elsif @user.following.size > 0 %>
          <div class="opcs">
            <%= render 'user_card', user: @user %>
          </div>
        <% else %>
          <div class="no-choice">
            <h4>Você ainda não segue outro usuários.</h4>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>

