<div class="navbar navbar-expand-md navbar-lewagon transparent fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo-white.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"><i class="fas fa-bars"></i> </span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Faculdades", faculdades_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Cursos", cursos_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown dropdown-left">
          <% if current_user.photo.present? %>
          <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", style: 'height:50px ;width:50px;', id: "navbarDropdown",   data: { toggle: "dropdown"}, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
          <%= image_tag 'user.png', class: "avatar dropdown-toggle", style: 'height:50px ;width:50px;object-fit:cover', id: "navbarDropdown",   data: { toggle: "dropdown"}, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Perfil", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
      <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
